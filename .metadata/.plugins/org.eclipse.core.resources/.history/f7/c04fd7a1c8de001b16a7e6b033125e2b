<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>MapTest004.html</title>

<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=a76949096713e82c75fa45bdb32ebb4c"></script>

<script type="text/javascript">

	function initialize()
	{
		container = document.getElementById("map");
		options = 
		{
			center: new kakao.maps.LatLng(37.556583, 126.919521)
			, level: 3
		}
		
		map = new kakao.maps.Map(container, options);
	}
	
	function setCenter()
	{
		// 중심을 이동할 위치, 경도 설정
		var moveLatLng = new kakao.maps.LatLng(37.555365, 126.921455);
		
		// 지도 중심 이동
		map.setCenter(moveLatLng);
	}
	
	function panTo()
	{
		// 중심을 이동할 위치, 경도 설정(홍대입구역 2번출구 스타벅스)
		var moveLatLng = new kakao.maps.LatLng(37.557177, 126.923642);
		
		// 지도 중심을 부드럽게 이동
		//--이동 과정에서 이동할 거리가 지도에서 표현되는 범위 밖에 있다면
		//  즉, 이동 거리가 지도 화면보다 크다면
		//  부드러운 효과 없이 이동하게 된다.
		map.panTo(moveLatLng);
	}
	
	function panTo2()
	{
		// 중심을 이동할 위치, 경도 설정(준봉빌딩)
		var moveLatLng = new kakao.maps.LatLng(37.554974, 126.922671);
		
		map.panTo(moveLatLng);
	}
	
	function panTo3()
	{
		// 중심을 이동할 위치, 경도 설정(국회의사당)
		var moveLatLng = new kakao.maps.LatLng(37.531877, 126.914299);
		
		map.panTo(moveLatLng);
	}
	
	function setCenterBack()
	{
		// 중심을 이동할 위치, 경도 설정
		var moveLatLng = new kakao.maps.LatLng(37.556583, 126.919521);
		
		// 지도 중심 이동
		map.setCenter(moveLatLng);
	}
	
</script>

</head>
<body onload="initialize()">

<div>
	<h1>Kakao Map 레벨 전환</h1>
	<hr>
</div>

<!-- 지도를 그릴 div 공간 확보(지정) -->
<div id="map" style="width:100%; height:350px;"></div>

<br>

<!-- 지도 레벨 출력 -->
<span id="mapLevel"></span>

</body>
</html>