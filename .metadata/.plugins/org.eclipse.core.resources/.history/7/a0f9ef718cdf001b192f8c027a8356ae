<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>MapTest015.html</title>

<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=a76949096713e82c75fa45bdb32ebb4c"></script>

<script type="text/javascript">

   function initialize()
   {
      container = document.getElementById("map");
      mapCenter = new kakao.maps.LatLng(37.556583, 126.919521);
      options =
      {
         center: mapCenter
         , level: 3
      }
      
      map = new kakao.maps.Map(container, options);
      
      // 마커 속성 구성
      imageSrc = "markerImages/markerGif03.gif";            //-- 마커 이미지 경로(또는 웹 상의 주소)
      imageSize = new kakao.maps.Size(54, 59);            //-- 마커 이미지 크기
      imageOption = {offset: new kakao.maps.Point(27, 69)};   //-- 마커 이미지에 대한 옵션
      //-- 마커의 좌표와 일치시킬 이미지 안에서의 좌표 설정
      
      // 위에서 구성한 마커 속성을 활용하여 마커 이미지 생성
      markerImage = new kakao.maps.MarkerImage(imageSrc, imageSize, imageOption);
      
      // 마커 생성
      marker = new kakao.maps.Marker(
      {
         position: mapCenter
         , image: markerImage      // 마커 이미지 설정
      });
      
      // 마커가 지도에 표시되도록 설정
      marker.setMap(map);
   }
   
</script>

</head>
<body onload="initialize()">

<div>
   <h1>Kakao Map 이동이 가능한 마커 생성</h1>
   <hr>
</div>

<!-- 지도를 그릴 div 공간 확보(지정) -->
<div id="map" style="width: 100%; height: 350px;"></div>


</body>
</html>